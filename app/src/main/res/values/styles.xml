    <style name="detail_activity_iv_movie_poster">
        <!--<item name="android:layout_width">184dp</item>-->
        <!--<item name="android:layout_height">@dimen/height_movie_poster</item>-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="detail_activity_tv_movie_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:textSize">24sp</item>-->
    </style>

    <style name="detail_activity_tv_movie_release_year">
        <item name="android:layout_below">@id/tv_detail_movie_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="detail_activity_tv_movie_rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="detail_activity_iv_movie_rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

